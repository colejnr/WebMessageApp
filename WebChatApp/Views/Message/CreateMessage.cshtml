@model WebChatApp.Models.Message
@{
    ViewData["Title"] = "Created Message";
    var baseUrl = $"{Context.Request.Scheme}://{Context.Request.Host.Value}";
}

<div class="text-center">
    <h3>Your Message has been created</h3>
    <h4>Share the link below</h4>
    <input class="form-control" value="@($"{baseUrl}{Url.Action("DecryptMessage", "Message", new { Id = Model.Id })}")" />
</div>
